@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekle</h1>

@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
<div class="form-group position-absolute">
    @Html.Label("Kategori Adı : ")
    @Html.TextBoxFor(x => x.CategoryName)
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br /><br />
    @Html.Label("Açıklama : ")
    @Html.TextBoxFor(x => x.CategoryDesc)
    @Html.ValidationMessageFor(x => x.CategoryDesc)
    <br />
    <br />
    <button class="btn btn-success rounded-pill">Kategoriyi Kaydet</button>
</div>
}

