@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekle</h1>

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group position-relative">
        @Html.Label("Kategori Adı : ")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /><br />
        @Html.Label("Açıklama : ")
        @Html.TextAreaFor(x => x.CategoryDesc, new { @class = "form-control position-relative" })
        @Html.ValidationMessageFor(x => x.CategoryDesc)
        <br />
        <br />
        <button class="btn btn-success rounded-pill">Kategoriyi Kaydet</button>
    </div>
}

